{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node"],
    "paths": {
      "*": ["./*"],
      "modules/*": ["./src/modules/*"],
      "common/*": ["./src/common/*"],
      "eureka/*": ["./src/eureka/*"],
      "host/*": ["./src/host/*"]
    }
  },
  "include": ["src", "rsbuild.config.ts", "tailwind.config.ts"]
}
